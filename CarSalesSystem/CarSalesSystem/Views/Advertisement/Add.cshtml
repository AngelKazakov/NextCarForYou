@model AdvertisementAddFormModel

@{
    ViewData["Title"] = "Add Car";
}
<div class="row">
    <div class="container-fluid">
        <form method="post">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Basic Data</h5>
                    <hr />
                    <p class="card-text">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm">
                                    <label>Brand</label>
                                    <select asp-for="Brand" id="selectBrandId" class="form-control" required>
                                        <option selected>--None--</option>
                                        @foreach (var brand in Model.Brands)
                                        {
                                            <option value="@brand.Id">@brand.Name</option>
                                        }
                                    </select>
                                    <br />
                                    <label asp-for="Price">Price</label>
                                    <input type="number" asp-for="Price" class="form-control">
                                    <br />
                                    <label asp-for="Mileage"></label>
                                    <input asp-for="Mileage" class="form-control" type="number">
                                    <span asp-validation-for="Mileage" class="small text-danger"></span>
                                    <br />
                                    <label asp-for="Color"></label>
                                    <select asp-for="Color" class="form-control">
                                        <option selected>--None--</option>
                                        @foreach (var color in Model.Colors)
                                        {
                                            <option value="@color.Id">@color.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm">
                                    <label>Model</label>
                                    <select asp-for="Model" id="selectModelId" class="form-control" required>
                                        <option selected>--None--</option>
                                    </select>
                                    <br />
                                    <label>Month of Manufacture</label>
                                    <select asp-for="Month" class="form-control" aria-label="Select Model">
                                        <option selected>--None--</option>
                                        <option value="1">January</option>
                                        <option value="2">February</option>
                                        <option value="3">March</option>
                                        <option value="4">April</option>
                                        <option value="5">May</option>
                                        <option value="6">June</option>
                                        <option value="7">July</option>
                                        <option value="8">August</option>
                                        <option value="9">September</option>
                                        <option value="10">October</option>
                                        <option value="11">November</option>
                                        <option value="12">December</option>
                                    </select>
                                    <br />
                                    <label>Region</label>
                                    <select asp-for="RegionId" id="selectRegionId" class="form-control" aria-label="Region">
                                        <option selected>--None--</option>
                                        @foreach (var region in Model.Regions)
                                        {
                                            <option value="@region.Id">@region.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm">
                                    <label>Category</label>
                                    <select asp-for="Category" class="form-control">
                                        <option selected>--None--</option>
                                        @foreach (var category in Model.VehicleCategories)
                                        {
                                            <option value="@category.Id">@category.Name</option>
                                        }
                                    </select>
                                    <br />
                                    <label asp-for="Year">Year of Manufacture</label>
                                    <input type="number" asp-for="Year" class="form-control">
                                    <br />
                                    <label>Location</label>
                                    <select asp-for="CityId" id="selectCityId" class="form-control">
                                        <option selected>--None--</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </p>
                </div>
            </div>
            <br />

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Technical Data</h5>
                    <hr />
                    <p class="card-text">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm">
                                    <label>Fuel Type</label>
                                    <select asp-for="EngineType" class="form-control">
                                        <option selected>--None--</option>
                                        @foreach (var engine in Model.EngineTypes)
                                        {
                                            <option value="@engine.Id">@engine.Name</option>
                                        }
                                    </select>
                                    <br />
                                    <label asp-for="Power">Power</label>
                                    <input type="number" asp-for="Power" class="form-control">
                                    <br />
                                </div>
                                <div class="col-sm">
                                    <label>Transmission</label>
                                    <select asp-for="TransmissionType" class="form-control">
                                        <option selected>--None--</option>
                                        @foreach (var transmission in Model.TransmissionTypes)
                                        {
                                            <option value="@transmission.Id">@transmission.Name</option>
                                        }
                                    </select>
                                    <br />
                                    <label>Euro Standard</label>
                                    <select asp-for="EuroStandard" class="form-control">
                                        <option selected>--None--</option>
                                        @foreach (var euroStandard in Model.EuroStandards)
                                        {
                                            <option value="@euroStandard.Id">@euroStandard.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                    </p>
                </div>
            </div>
            <br />
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Extras</h5>
                    <hr />
                    <p class="card-text">
                        <div class="container">
                            <div class="row">
                                <div class="container">
                                    @foreach (var category in @Model.Extras)
                                    {
                                        <div class="flex-md-row"><label><b> @category.Name </b></label></div>
                                        @foreach (var extra in category.Extras)
                                        {
                                            <label class="form-check-label">
                                                <input style="margin-left:5px" name="SelectedExtras" type="checkbox" value="@extra.Id" id="@extra.Id"> @extra.Name
                                            </label>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </p>
                </div>
            </div>
            <br />

            <div class="text-center">
                @*<button type="submit" class="btn btn-primary" id="buttonNextId" onclick="@("window.location.href='" + @Url.Action("AddStep2", "Advertisement") + "'");">Next</button>*@
                <button type="submit" class="btn btn-primary" id="buttonNextId">Next</button>
            </div>

        </form>
    </div>
</div>

@section scripts{
    <script src="/js/site.js" type="text/javascript"></script>
}
