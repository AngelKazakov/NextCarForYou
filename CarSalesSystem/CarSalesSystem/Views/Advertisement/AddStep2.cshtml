@model AdvertisementAddFormModel

@{
    ViewData["Title"] = "Add Car";
}
<div class="row">
    <div class="container-fluid">
        <form method="post" enctype="multipart/form-data">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Additional Data</h5>
                    <hr />
                    <p class="card-text">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm">
                                    <label asp-for="Name"></label>
                                    <input asp-for="Name" class="form-control" type="text">
                                    <span asp-validation-for="Name" class="small text-danger"></span>
                                    <br />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md">
                                    <div class="form-group">
                                        <label asp-for="Description">Description</label>
                                        <textarea asp-for="Description" class="form-control"  rows="3"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </p>
                </div>
            </div>
            <br />

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Upload Images</h5>
                    <hr />
                    <p class="card-text">
                        <div class="container">
                            <div class="row">
                                <section>
                                    <div class="input-group my-3">
                                        <div class="custom-file">
                                            <input asp-for="Images" type="file" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
                                            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                                        </div>
                                    </div>
                                </section>
                            </div>
                        </div>
                    </p>
                </div>
            </div>
            <br />
            
            <input type="file" name="Images"/>

            <div class="text-center">
                <button type="button" class="btn btn-primary" onclick="history.go(-1); return false;">Back</button>
                <button type="button" class="btn btn-primary">Finish</button>
            </div>

        </form>
    </div>
</div>
