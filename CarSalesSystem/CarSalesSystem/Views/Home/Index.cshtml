@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="row">
        <div class="container-fluid">
            <form method="post">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Fast Search</h5>
                        <hr />
                        <p class="card-text">
                            <div class="container">
                                <div class="row">
                                    <div class="col-sm">
                                        <label>Brand</label>
                                        <select asp-for="SearchAdvertisementModel.Brand" id="selectBrandId" class="form-control">
                                            <option selected value="">--None--</option>
                                            @foreach (var brand in Model.SearchAdvertisementModel.Brands)
                                            {
                                                <option value="@brand.Id">@brand.Name</option>
                                            }
                                        </select>
                                        <br />
                                        <label asp-for="SearchAdvertisementModel.MaximumPrice">Maximum Price</label>
                                        <input type="number" asp-for="SearchAdvertisementModel.MaximumPrice" class="form-control">
                                        <br />
                                        <label>Fuel Type</label>
                                        <select asp-for="SearchAdvertisementModel.EngineType" class="form-control">
                                            <option selected value="">--None--</option>
                                            @foreach (var engine in Model.SearchAdvertisementModel.EngineTypes)
                                            {
                                                <option value="@engine.Id">@engine.Name</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-sm">
                                        <label>Model</label>
                                        <select asp-for="SearchAdvertisementModel.Model" id="selectModelId" class="form-control">
                                            <option selected value="">--None--</option>
                                        </select>
                                        <br />
                                        <label>Region</label>
                                        <select asp-for="SearchAdvertisementModel.Region" id="selectRegionId" class="form-control">
                                            <option selected value="">--None--</option>
                                            @foreach (var region in Model.SearchAdvertisementModel.Regions)
                                            {
                                                <option value="@region.Id">@region.Name</option>
                                            }
                                        </select>
                                        <br />
                                        <label>Transmission</label>
                                        <select asp-for="SearchAdvertisementModel.TransmissionType" class="form-control">
                                            <option selected value="">--None--</option>
                                            @foreach (var transmission in Model.SearchAdvertisementModel.TransmissionTypes)
                                            {
                                                <option value="@transmission.Id">@transmission.Name</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-sm">
                                        <label asp-for="SearchAdvertisementModel.Year">Year of Manufacture</label>
                                        <input type="number" asp-for="SearchAdvertisementModel.Year" class="form-control">
                                        <br />
                                        <label>Location</label>
                                        <select asp-for="SearchAdvertisementModel.City" id="selectCityId" class="form-control">
                                            <option selected value="">--None--</option>
                                        </select>
                                        <br />
                                        <label>Order By</label>
                                        <select asp-for="SearchAdvertisementModel.OrderBy" class="form-control">
                                            <option value="@OrderByValues.Brand_Model_Price">Brand/Model/Price</option>
                                            <option value="@OrderByValues.Price">Price</option>
                                            <option value="@OrderByValues.Year">Year</option>
                                            <option value="@OrderByValues.Newest">Newest</option>
                                        </select>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <button type="submit" class="btn btn-primary btn-lg btn-block" id="buttonNextId">Search</button>
                                </div>
                                <br />
                                <div class="float-md-right">
                                    @Html.ActionLink("Detailed Search", "DetailedSearch", "Search", null, new { @class = "page-scroll", style = "font-weight:bold;" })
                                </div>
                            </div>
                        </p>
                    </div>
                </div>
            </form>
            <br />
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Newest Advertisements</h5>
                    <hr class="border-primary" />
                    <div class="container mt-4">
                        <div class="row  d-flex justify-content-center">
                            @foreach (var advertisement in @Model.LatestPublishedAdvertisements)
                            {
                                {
                                    <div class="col-auto mb-3">
                                        <div class="card" style="width: 18rem;">
                                            @if (advertisement.Image != null)
                                            {
                                                var base64 = Convert.ToBase64String(advertisement.Image);
                                                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                                <img class="card-img-top mx-auto d-block m-3" src="@imgSrc" style="height: 250px; width: 250px;" alt="Card image cap">
                                            }
                                            <div class="card-body">
                                                <h3 class="card-title">@advertisement.Name</h3>
                                                <h5 class="card-text">Price: €@advertisement.Price</h5>
                                                <p class="card-text">Mileage: @advertisement.Mileage km</p>
                                                <p class="card-text">City: @advertisement.City, Region: @advertisement.Region</p>
                                                <p class="card-text">Created on: @advertisement.CreatedOn</p>
                                                @Html.ActionLink("See Details", "Details", "Advertisement", new { advertisementId = @advertisement.AdvertisementId }, new { @class = "btn btn-primary" })
                                                <button title="Add to Favorite" type="button" class="btn btn-outline-secondary" id="@advertisement.AdvertisementId" onclick="AddToFav(this.id)">
                                                    <img src="/images/heart.svg" alt="Add to favorite">
                                                </button>
                                            </div>
                                        </div>
                                        <br />
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="/js/site.js" type="text/javascript"></script>
    
    <script>
        function AddToFav(itemId) {
            console.log('itemId: ' + itemId);
            $.ajax({
                url: "@Url.Action("AddAdvertisementToFavorite","User")",
                type: "POST",
                dataType: "json",
                headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                data: {
                    advertisementId: itemId
                },
                error: function (response) {
                    if (!response.Success)
                        alert("Server error.");
                },
                success: function (response) {
                    if (response === 'OK')
                        alert(response);
                    else
                        alert(response.Success);
                }
            });
        }
    </script>
}
